@{     
       var PatientPID="";     
       var PatientFName="";     
       var PatientMI="";     
       var PatientLName="";  
       var PatientSuffix="";    
       var PatientGender="";   
       if(IsPost){         
           PatientPID=Request["formPID"]; 
           PatientFName=Request["formFName"];        
           PatientMI=Request["formMI"];         
           PatientLName=Request["formLName"];  
           PatientSuffix=Request["formSuffix"];     
           PatientGender=Request["formGender"];   
           var SQLINSERT = "INSERT INTO Patient (M0020_PAT_ID, M0040_PAT_FName, M0040_PAT_MI, M0040_PAT_LNAME, M0040_PAT_SUFFIX, M0069_PAT_GENDER) VALUES (@0, @1, @2, @3, @4, @5)";         
           var db = Database.Open("Grace");        
           db.Execute(SQLINSERT, PatientPID, PatientFName, PatientMI, PatientLName, PatientSuffix, PatientGender); 
           Response.Redirect("ListPatients.cshtml");      
           }     
}

